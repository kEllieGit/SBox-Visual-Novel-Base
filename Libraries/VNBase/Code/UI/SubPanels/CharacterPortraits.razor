@using System;
@using Sandbox;

@namespace VNBase.UI
@inherits SubPanel

@if ( !Player.IsValid() )
{
    return;
}

<root>
    @foreach ( var character in Player.State.Characters )
    {
        <CharacterPortrait Character="@character" Player="@Player" Settings="@Settings" Hud="@Hud"/>
    }
</root>

@code {
    #nullable enable
    protected override int BuildHash()
    {
        return HashCode.Combine( Player?.State.DialogueText, Player?.State.Characters.Count );
    }
}